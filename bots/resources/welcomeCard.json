{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://github.com/QuDbo/flybot/tree/main/bots/resources/flyme.png",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "Welcome to the FlyMe bot",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "true",
      "text": "I'm a demonstration bot designed to help booking plane tickets.",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": "true",
      "text": "Type 'help' for some help (not implemented). You can stop this conversation by saying goodbye (or 'cancel', 'quit') at any moment.",
      "wrap": true,
      "maxLines": 0
    }
  ]
}